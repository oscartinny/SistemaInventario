@model int 

<div class="d-grid gap-2 d-md-block">
    <!-- Para pasar el parametro recibido en el Controller se deberá usar el tag asp-route-[nombre variable en metodo controller] -->
    <button type="submit" class="btn btn-primary" asp-route-id="@Model" onfocus="false">
        <i class="bi bi-pencil-square"></i> Actualizar
    </button>
    <a asp-action="Index" class="btn btn-success">
        <i class="bi bi-arrow-return-left"></i> Regresar
    </a>
</div>