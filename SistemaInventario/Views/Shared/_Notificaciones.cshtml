
@using SistemaInventario.Utilidades

<!-- TempData son datas temporales que se pueden ocupar atraves de los controladores o cualquier lugar del programa -->
<!-- Realizamos una validación en la que vemos si en la constante de DS.exitosa hay información-->
<!-- Ver ejemplo en BodegaController Upsert en donde se asigna la variable TempData[DS.Exitosa]-->
<!-- La aplicación de esta vista parcial la realizamos en _Layout-->
@if (TempData[DS.Exitosa] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData[DS.Exitosa]');
    </script>
}

@if (TempData[DS.Error] != null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.error('@TempData[DS.Error]');
    </script>
}



